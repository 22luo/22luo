<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mhys.mapper.TbGoodsMapper">
    <select id="selectByCateIdandTitle" resultType="TbGoods">
        select *from tb_goods
        <where>
            <if test="tbGoods.cateid!=null and tbGoods.cateid!=0">
                and cateid=#{tbGoods.cateid}
            </if>
            <if test="tbGoods.title!=null and tbGoods.title!=''">
                and title like concat('%',#{tbGoods.title},'%')
            </if>
        </where>
    </select>

    <select id="selectByIdList" resultType="TbGoods">
        select * from tb_goods where id in
        <foreach collection="idList" item="i" open="(" close=")" separator=",">
            #{i}
        </foreach>
    </select>

</mapper>